      <lg type="song lyrics">
        <head>בוא אל הכחול</head>
        <lg number="1" type="stanza">
          <l>בוא</l>
          <l>אל הכחול</l>
          <l>בוא</l>
          <l>תשכב בחול</l>
          <l>בוא</l>
          <l>שוב</l>
          <l>אל העונג</l>
        </lg>
        <lg number="2" type="stanza">
          <l>בוא</l>
          <l>תיגע לאט</l>
          <l>כן</l>
          <l>עכשיו כמעט</l>
          <l>בוא</l>
          <l>שוב</l>
          <l>עד הבוקר</l>
        </lg>
        <lg number="3" type="stanza">
          <l>בוא אל הכחול</l>
          <l>תן לגוף</l>
          <l>להוביל אותך</l>
          <l>בוא תהיה חשוף</l>
          <l>ולא נאמר מלה</l>
          <l>לא נאמר לה על אהבה</l>
        </lg>
        <lg number="4" type="stanza">
          <l>לך</l>
          <l>עם הכאב</l>
          <l>עם</l>
          <l>דפיקות הלב</l>
          <l>פתח</l>
          <l>כבר</l>
          <l>את הדלת.</l>
        </lg>
      </lg>
